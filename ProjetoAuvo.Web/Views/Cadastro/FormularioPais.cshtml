@model ProjetoAuvo.Web.Models.GloboClima
<div class="main-wrapper">
    <header>
        @Html.Partial("~/Views/Header.cshtml")
    </header>
    <div class="header-bar w-100 mt-4 d-flex justify-content-between align-items-center px-3 py-2" id="blocoTitulo">
        <h5 class="mb-0 text-white">Cadastro de Países e Clima</h5>
    </div>
    <div class="contentLogin container">
        <form asp-action="SalvarFavorito" asp-controller="Cadastro" method="post">
            <input type="hidden" id="paisNome" name="paisNome" />
            <div class="row mb-3">
                <label class="col text-black">País:</label>
                <div class="col-sm-10">
                    <select asp-items="Model.PaisesSelect" class="form-control select2" id="paisId" name="paisId">
                    </select>  
                </div>
            </div>
            <hr />
            <div class="d-flex justify-content-end mb-4">
                <input type="submit" class="btn btn-dark me-2" value="Salvar" />
                <button type="button" onclick="limparCampos()" class="btn btn-secondary">Limpar</button>
            </div>
        </form>
    </div>
    <div id="botaoVoltar">
        <a asp-action="Pais" asp-controller="Cadastro" role="button" class="btn btn-outline-dark">Voltar</a>
    </div>
    <footer class="footer">
        @Html.Partial("~/Views/Footer.cshtml")
    </footer>
</div>
<script>
    document.getElementById('paisId').addEventListener('change', function () {
        var select = this;
        var selectedText = select.options[select.selectedIndex].text;
        document.getElementById('paisNome').value = selectedText;
    });
</script>